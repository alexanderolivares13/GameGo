<section class="card" style="width: 18rem;">
    <a href="/game/{{id}}">
        <img class="card-img-top" src="{{game_cover}}" alt="cover of {{title}}">
        <div class="card-body d-flex justify-content-between">
            <h5 class="card-title">{{title}}</h5>
            <h5 class="card-title">{{price}}</h5>
        </div>
    </a>
</section>